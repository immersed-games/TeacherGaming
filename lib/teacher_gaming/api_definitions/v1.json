{
  "session": {
    "attributes": [ "studentid", "classid" ],
    "methods": {
      "create": {
        "scope": "class",
        "anonymous": "false",
        "type": "get",
        "path": "/validate",
        "params": [ "studentid", "classid" ]
      },
      "update": {
        "scope": "all",
        "anonymous": "false",
        "type": "get",
        "path": "/playing_game",
        "params": [ "studentid", "classid" ]
      },
      "destroy": {
        "scope": "instance",
        "anonymous": "false",
        "type": "get",
        "path": "/logout_student",
        "params": [ "studentid", "classid" ]
      }
    }
  },
  "player_state": {
    "attributes": [ "studentid", "classid" ],
    "methods": {
      "update": {
        "scope": "all",
        "anonymous": "false",
        "type": "get",
        "path": "/update_state",
        "params": [ "studentid", "classid", "state" ]
      },
      "update_detailed": {
        "scope": "all",
        "anonymous": "false",
        "type": "get",
        "path": "/update_state_detailed",
        "params": [ "studentid", "classid", "state" ]
      }
    }
  },
  "event": {
    "attributes": [ "studentid", "classid" ],
    "methods": {
      "create": {
        "scope": "all",
        "anonymous": "false",
        "type": "get",
        "path": "/update_state",
        "params": [ "eventname", "classid", "sudentid", "duration" ]
      },
      "anonymous_create": {
        "scope": "all",
        "anonymous": "true",
        "type": "get",
        "path": "/update_state",
        "params": [ "eventname", "duration" ]
      }
    }
  }
}
